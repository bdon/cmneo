# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com

# Database - Use DATABASE_URL for Render/RDS
# For local development:
DB_NAME=myapp
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Or use DATABASE_URL (takes precedence):
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Settings
JWT_SECRET=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# Magic Link Settings
MAGIC_LINK_SECRET=your-magic-link-secret-here
MAGIC_LINK_EXPIRY_MINUTES=15

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:4321,http://127.0.0.1:4321,https://your-frontend.onrender.com

# Email Settings (Amazon SES)
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_SES_REGION=us-east-1
